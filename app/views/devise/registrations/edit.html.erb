<div class="container padding-top-20">
	<div class="row">
		<div class="col-md-12 col-xs-12">
      		<% flash.each do |key, value| %>
        		<p class="bg-info text-info msg-success"><i class="pull-right fa fa-times"></i><%= value %></p>
      		<% end %>
    	</div>
	</div>

	<div class="row">
		<div class="col-md-2 col-xs-2"></div>
		<div class="col-md-8 col-xs-8">
			<h2><%= "Mi Perfil" %></h2>
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-user" }) do |f| %>

				<div class="form-group">
					<%= f.label(:username, "Nombre de Usuario") %><br />
					<%= f.text_field :username, autocomplete: "off", class: "form-control" %>
				</div>
				
				<div class="form-group">
					<%= f.label(:email, "Correo") %><br />
					<%= f.email_field :email, autofocus: true, autocomplete: "off", class: "form-control" %>
				</div>
				
				<div class="form-group">
					<%= link_to 'Deseo cambiar mi contraseña', "javascript:void(0);", :class => 'change-password' %>
				</div>

				<div class="form-group change-password-input" style="display:none;">
					<%= f.label(:password, "Nueva Contraseña") %> <i class="fa fa-question-circle" data-toggle="tooltip" data-placement="top" title="Dejar vacío si no deseas cambiar contraseña."></i><br />
					<%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Ingresa tu nueva contraseña" %>
				</div>

				<div class="form-group change-password-input" style="display:none;">
					<%= f.label(:password_confirmation, "Confirmar Contraseña") %>
					<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
				</div>

				<div class="form-group">
					<%= f.label(:current_password, "Contraseña actual") %> <i class="fa fa-question-circle" data-toggle="tooltip" data-placement="top" title="Ingresa tu conraseña para confirmar los cambios."></i>
					<%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
				</div>

				<div class="actions">
					<%= f.submit("Actualizar", class: "btn btn-success review-btn") %>
				</div>
			<% end %>
		</div>
		<div class="col-md-2 col-xs-2"></div>
	</div>  
</div> 